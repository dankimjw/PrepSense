# PrepSense Environment Configuration Template
# Copy this file to .env and fill in your values

# OpenAI Configuration
# Get your API key from https://platform.openai.com/api-keys
# Store your API key in config/openai_key.txt for security
OPENAI_API_KEY_FILE=config/openai_key.txt

# Server Configuration
VISION_URL=http://localhost:8001/detect
SERVER_HOST=0.0.0.0
SERVER_PORT=8001

# Google Cloud Configuration
# Download your service account key from Google Cloud Console
# and place it in the config/ directory
# GOOGLE_APPLICATION_CREDENTIALS=config/your-service-account-key.json

# Google Cloud Project Configuration
GCP_PROJECT_ID=adsp-34002-on02-prep-sense

# Demo User Configuration
# Each teammate can set their own DEMO_USER_ID to avoid conflicts
# Options: samantha-1, john-2, jane-3, bob-4, mike-5, sarah-6
DEMO_USER_ID=samantha-1

# Optional: Development Settings
DEBUG=False
LOG_LEVEL=INFO

# Spoonacular API Configuration
# Get your API key from https://spoonacular.com/food-api
# IMPORTANT: Replace with your own API key
SPOONACULAR_API_KEY=YOUR_SPOONACULAR_API_KEY_HERE

# Database Configuration
DB_TYPE=postgres

# PostgreSQL Configuration (Google Cloud SQL - SHARED DATABASE)
# Get these values from Daniel for the shared development database
POSTGRES_HOST=YOUR_DATABASE_HOST_HERE
POSTGRES_PORT=5432
POSTGRES_DATABASE=prepsense
POSTGRES_USER=YOUR_DATABASE_USER_HERE
POSTGRES_PASSWORD=YOUR_DATABASE_PASSWORD_HERE
CLOUD_SQL_CONNECTION_NAME=YOUR_CLOUD_SQL_CONNECTION_NAME_HERE

# IAM Authentication (set to true to use Google accounts instead of passwords)
POSTGRES_USE_IAM=false
POSTGRES_IAM_USER=your-email@uchicago.edu