# PrepSense Environment Variables Template
# Copy this file to .env and fill in your values
# NEVER commit the .env file to Git!

# Database Configuration (PostgreSQL on Google Cloud SQL)
POSTGRES_HOST=your-cloud-sql-ip-here
POSTGRES_PORT=5432
POSTGRES_DATABASE=prepsense
POSTGRES_USER=your-database-user-here
POSTGRES_PASSWORD=your-password-here
CLOUD_SQL_CONNECTION_NAME=your-project-id:region:instance-name

# API Keys (REQUIRED - App will not function without these)
OPENAI_API_KEY=sk-your-openai-api-key-here  # REQUIRED for chat and recipe features
SPOONACULAR_API_KEY=your-spoonacular-api-key-here  # REQUIRED for recipe data

# User Configuration
# Use a unique ID to avoid conflicts with teammates (e.g., 1001, 1002, etc.)
DEMO_USER_ID=your-unique-id-here

# Optional: Google Cloud Configuration
# Only needed if using GCS features or Cloud SQL IAM auth
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/your/credentials.json

# Optional: Development Settings
# LOG_LEVEL=INFO
# DEBUG=False

# Frontend API URL (for iOS app)
# Update this to your computer's IP when running locally
API_URL=http://localhost:8001