{
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|MultiEdit|Write",
        "hooks": [
          { "type": "subagent", "name": "test-runner" }
        ]
      }
    ],
    "Sub Agent Stop": [
      {
        "matcher": "test-runner",
        "hooks": [
          {
            "type": "subagent",
            "name": "reviewer",
            "condition": ".passed == true"
          },
          {
            "type": "subagent",
            "name": "fix-assistant",
            "condition": ".passed == false"
          }
        ]
      },
      {
        "matcher": "reviewer",
        "hooks": [
          {
            "type": "subagent",
            "name": "fix-assistant",
            "condition": ".approved == false"
          }
        ]
      }
    ]
  }
}
